# 数据目录
TGDL_DATA_DIR=./data
# docker环境禁用tqdm
TGDL_DISABLE_TQDM=true
# 限制下载文件大小 (单位：MB)
TGDL_MAX_FILE_SIZE_MB=500
# 频道空闲等待时间 (单位：秒)
TGDL_WAIT_INTERVAL_SECONDS=300
# 下载重试初始延迟 (单位：秒)
TGDL_INITIAL_RETRY_DELAY=1
# 下载重试最大延迟 (单位：秒)
TGDL_MAX_RETRY_DELAY=1800
# 下载重试次数 (0表示无限制)
TGDL_MAX_RETRIES=0
# 下载并发数
TGDL_MAX_CONCURRENT_DOWNLOADS=3
# 下载批处理有效消息数
TGDL_BATCH_SIZE=15

# 时区配置（可选，默认为Asia/Shanghai）
# 支持格式：Asia/Shanghai, America/New_York, Europe/London等
TZ=Asia/Shanghai

# 进度跟踪步长（可选，默认为10）
# 该值决定了进度条更新的频率，单位为百分比
TGDL_PROGRESS_STEP=10